<%- include("partials/header"); -%>
<div class="row register-form">
    <div class="col-md-8 offset-md-2">
        <form method="post" class="custom-form">
            <h1 class="text-center">Employee Registration</h1>
            <div class="form-row form-group">
                <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field">Full Name</label></div>
                <div class="col-sm-6 input-column"><input name="fullname" type="text" class="form-control" required /></div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 label-column"><label class="col-form-label" for="email-input-field">Email </label></div>
                <div class="col-sm-6 input-column"><input name="email" type="email" class="form-control" required  /></div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 label-column"><label class="col-form-label" for="pawssword-input-field">Password </label></div>
                <div class="col-sm-6 input-column"><input name="password" type="password" class="form-control" required minlength="8" /></div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field">D.O.B</label></div>
                <div class="col-sm-6 input-column"><input name="dob" class="form-control" type="date" required max="10" /></div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field">Gender</label></div>
                <div class="col-sm-6 input-column"><select name="gender" class="form-control" required><option value selected>Choose Gender</option><option value="M">Male</option><option value="F">Female</option></select></div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field">Permanent Adresss</label></div>
                <div class="col-sm-6 input-column"><textarea Name="address" class="form-control" required></textarea></div>
            </div>
            <div class="form-row form-group">
                <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field">Phone Number</label></div>
                <div class="col-sm-6 input-column"><input name="phone" type="tel" class="form-control" maxlength="10" minlength="10" required /></div>
            </div>
            <div class="form-check"><input type="checkbox" class="form-check-input" id="formCheck-1" required /><label class="form-check-label" for="formCheck-1">I&#39;ve read and accept the terms and conditions</label></div>
            <input class="btn btn-light submit-button" type="submit" value="Register"/>
          </form>
    </div>
</div>

<%- include("partials/footer"); -%>
